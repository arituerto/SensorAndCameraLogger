<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tango_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="arituerto.sensorandcameralogger.TangoSettingsActivity">

    <Button
        android:text="OK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/okButton" />

    <Switch
        android:text="Motion Tracking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/switchMotion"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:text="Auto Recovery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxAutoRecovery"
        android:layout_below="@+id/switchMotion"
        android:layout_alignStart="@+id/checkBoxHighRatePose"
        android:textAlignment="viewStart"
        android:layout_alignEnd="@+id/checkBoxHighRatePose" />

    <CheckBox
        android:text="High Rate Pose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBoxAutoRecovery"
        android:layout_centerHorizontal="true"
        android:id="@+id/checkBoxHighRatePose"
        android:textAlignment="viewStart" />

    <CheckBox
        android:text="SmoothPose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBoxDrift"
        android:id="@+id/checkBoxSmoothPose"
        android:layout_alignStart="@+id/checkBoxDrift"
        android:textAlignment="viewStart"
        android:layout_alignEnd="@+id/checkBoxDrift" />

    <CheckBox
        android:text="Drift Correction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxDrift"
        android:textAlignment="viewStart"
        android:layout_below="@+id/checkBoxHighRatePose"
        android:layout_alignStart="@+id/checkBoxHighRatePose"
        android:layout_alignEnd="@+id/checkBoxHighRatePose" />

    <Switch
        android:text="Depth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBoxSmoothPose"
        android:id="@+id/switchDepth"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switchDepth"
        android:id="@+id/spinner"
        android:layout_alignStart="@+id/checkBoxSmoothPose" />

    <TextView
        android:text="Depth Mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/textView5"
        android:textColor="@android:color/black"
        android:layout_toStartOf="@+id/spinner"
        android:layout_alignBottom="@+id/spinner"
        android:layout_below="@+id/switchDepth" />

</RelativeLayout>
