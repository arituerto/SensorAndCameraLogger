<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cprosettings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="arituerto.sensorandcameralogger.CPROSettingsActivity">

    <Button
        android:text="OK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/okButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:id="@+id/editTextCPRO_Rmac"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/okButton" />

    <TextView
        android:text="CPRO R MAC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_alignBaseline="@+id/editTextCPRO_Rmac"
        android:layout_alignBottom="@+id/editTextCPRO_Rmac"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/editTextCPRO_Rmac"
        android:textSize="18sp"
        android:textAlignment="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/editTextCPRO_Lmac"
        android:layout_below="@+id/editTextCPRO_Rmac"
        android:layout_alignStart="@+id/editTextCPRO_Rmac"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="CPRO L MAC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/editTextCPRO_Lmac"
        android:layout_alignBottom="@+id/editTextCPRO_Lmac"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/editTextCPRO_Lmac" />

</RelativeLayout>
